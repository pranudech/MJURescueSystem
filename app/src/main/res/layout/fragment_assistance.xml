
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomeStudentActivity"
    android:background="#e1e1e1"
    android:id="@+id/main_layout">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="false"
            android:id="@+id/scrollView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:padding="10dip"
                    android:weightSum="1">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="แจ้งให้ผู้อื่นกรณีที่รู้ข้อมูลรหัสนักศึกษา"
                            android:id="@+id/checkBoxOne"
                            android:checked="false"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="26dp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="แจ้งเหตุให้ผู้อื่นกรณีไม่รู้ข้อมูลผู้ประสบเหตุ"
                            android:id="@+id/checkBoxTwo"
                            android:checked="false"
                            android:layout_below="@+id/checkBoxOne"
                            android:layout_alignStart="@+id/checkBoxOne" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnImgGreen"
                            android:src="@drawable/btn_click_smode"
                            android:background="#e1e1e1"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_below="@+id/checkBoxTwo"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Yellow"
                            android:id="@+id/txtYellow"
                            android:layout_gravity="left|bottom"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_marginTop="60dp"
                            android:layout_below="@+id/checkBoxTwo"
                            android:layout_alignEnd="@+id/checkBoxTwo" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnImgYellow"
                            android:src="@drawable/btn_click_mmode"
                            android:background="#e1e1e1"
                            android:layout_below="@+id/btnImgGreen"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Green"
                            android:id="@+id/txtGreen"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:layout_marginBottom="61dp"
                            android:layout_above="@+id/txtRed"
                            android:layout_alignStart="@+id/txtYellow" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnImgRed"
                            android:src="@drawable/btn_click_lmode"
                            android:background="#e1e1e1"
                            android:layout_below="@+id/btnImgYellow"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/txtRed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="61dp"
                            android:text="Red"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_below="@+id/btnImgYellow"
                            android:layout_alignEnd="@+id/txtGreen" />

                </RelativeLayout>
        </ScrollView>

</RelativeLayout>
